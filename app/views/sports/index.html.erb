<p id="notice"><%= notice %></p>

<h1>Countrywise Sports</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>   
    <% @checkingsize = @countrywisesports.split(";").size() %>
    <% if @checkingsize > 1 %>
    <% @countrywisesports = @countrywisesports.split(";") %>
    <% @countrywisesports.each do |sport| %>
    <% @sports = sport.split("-") %>
      <tr>
        <td><%= @sports[0] %></td>
         <td> : </td>
        <td>Sports played in <%= @sports[0] %> are <%= @sports[1] %></td>
      </tr>
    <% end %>
    <% else %>
      <% @sports = @countrywisesports.split("-") %>
      <tr>
        <td><%= @sports[0] %></td>
        <td> : </td>
        <td>Sports played in <%= @sports[0] %> are <%= @sports[1] %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% unless current_user && current_user.admin? %>
<% else %>
<%= link_to 'New Sport', new_sport_path %>
<h4>Below are the sports added so far :</h4>
<% if @sports != nil %>
  <% if @sportsadded.size() > 1 %>
    <% @sportsadded.each do |sport| %>
    <%= sport.sport %></br>
  <% end %>
<% end %>
<% end %>
<% end %>
